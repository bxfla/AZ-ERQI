<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vacational"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="az.com.newazhong.workoffice.activity.VacationalActivity">

    <az.com.newazhong.utilsclass.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_title="业务培训">
    </az.com.newazhong.utilsclass.myViews.Header>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rbPropStydy"
            style="@style/fragment0_radionbutton"
            android:drawableTop="@drawable/study1"
            android:text="法律法规" />

        <RadioButton
            android:id="@+id/rbClassStudy"
            style="@style/fragment0_radionbutton"
            android:drawableTop="@drawable/study2"
            android:text="党建培训" />
        <RadioButton
            android:id="@+id/rbPropyActivity"
            style="@style/fragment0_radionbutton"
            android:drawableTop="@drawable/study3"
            android:text="部门组织培训" />
    </LinearLayout>

</LinearLayout>
