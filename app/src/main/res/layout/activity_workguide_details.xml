<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_workguide_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="az.com.newazhong.workguide.activity.WorkGuideDetailsActivity">

    <az.com.newazhong.utilsclass.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_title="@string/work_guide_details">
    </az.com.newazhong.utilsclass.myViews.Header>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <!--title-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg_selected"
                android:layout_margin="2dp"/>
            <!--centent-->
            <az.com.newazhong.utilsclass.myViews.RichTextView
                android:id="@+id/tvContent"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="7dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <WebView
                android:id="@+id/webView"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="7dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </WebView>
            <!--电话-->
            <RelativeLayout
                android:id="@+id/rePhone"
                android:visibility="gone"
                android:layout_height="45dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/linearlayout"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/phone"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/tv1" />
                <View
                    android:id="@+id/viewb"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@color/shouye"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/tvPhone"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/workguide_phone"/>
            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/currentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    android:gravity="center"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/currentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@null"
                    android:gravity="center"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                style="@style/TextView"
                android:layout_width="match_parent"
                android:layout_marginTop="150dp"
                android:text="申请材料上传"
                android:background="@color/shouye"
                android:textSize="19dp"
                android:paddingLeft="15dp"
                android:id="@+id/textView2" />

            <az.com.newazhong.utilsclass.myViews.MyRecyclerView
                android:id="@+id/myRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </az.com.newazhong.utilsclass.myViews.MyRecyclerView>

            <TextView
                android:id="@+id/tvReservation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_margin="40dp"
                android:layout_alignParentRight="true"
                android:text="提交"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:background="@drawable/custom_progress_radius"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
