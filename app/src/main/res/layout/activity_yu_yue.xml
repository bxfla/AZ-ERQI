<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_yu_yue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="az.com.newazhong.propagandwindow.activity.YuYueActivity">

    <az.com.newazhong.utilsclass.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_title="活动预约">
    </az.com.newazhong.utilsclass.myViews.Header>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shouye"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="预约人姓名:"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/etName"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:background="@null"
                android:layout_height="match_parent"
                android:hint="请输入预约人姓名"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shouye"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="预约人电话:"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/etPhone"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:hint="请输入预约人电话"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shouye"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/custom_progress_radius"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:layout_margin="40dp"/>

</LinearLayout>
