<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_findadd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="az.com.newazhong.utilsclass.person.activity.FindAddActivity">

    <az.com.newazhong.utilsclass.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_title="@string/add">
    </az.com.newazhong.utilsclass.myViews.Header>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rlMap"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/textView"
                    android:paddingLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="发生地点:"
                    android:textColor="@color/xiaohei"
                    android:gravity="center"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tvAddress"
                    android:textSize="14dp"
                    android:textColor="@color/ziti"
                    android:layout_toRightOf="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="请尽量准确定位"
                    android:gravity="center"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/shouye"/>

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/textView1"
                    android:paddingLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="详细地点:"
                    android:textColor="@color/xiaohei"
                    android:gravity="center"/>
                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/etAddress"
                    android:background="@null"
                    android:layout_toRightOf="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入详细位置"
                    android:textSize="14dp"
                    android:textColor="@color/ziti"
                    android:gravity="center"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/shouye"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/shouye"/>

            <EditText
                android:id="@+id/etContent"
                android:layout_marginTop="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:padding="4dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="top"
                android:textSize="14dp"
                android:hint="请输入时间、地点、具体事件......"/>

            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewAdd01"
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/add_myphoto"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="40dp"
                    android:layout_marginRight="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <ImageView
                    android:id="@+id/imageViewAdd2"
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/add_myphoto"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:id="@+id/imageViewAdd03"
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/add_myphoto"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/shouye"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/radionGroup"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/rbOpen"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="1dp"
                        android:checked="true"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="公开"
                        android:paddingLeft="8dp"
                        android:textColor="@color/xiaohei"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/shouye"/>
                    <RadioButton
                        android:id="@+id/rbClose"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:layout_marginRight="1dp"
                        android:textColor="@color/xiaohei"
                        android:text="不公开"/>
                </RadioGroup>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="所有人可见"
                        android:background="@color/white"
                        android:gravity="center"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/shouye"/>
                    <TextView
                        android:layout_marginTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="设为隐私、仅工作人员可见"
                        android:background="@color/white"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnSend"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:background="@drawable/custom_progress_radius"
                android:text="@string/title_tips_confim" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
