<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_street_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="az.com.newazhong.street12345.activity.StreetDetailActivity">

    <az.com.newazhong.utilsclass.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_title="@string/community123">
    </az.com.newazhong.utilsclass.myViews.Header>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--标题图片-->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/myphoto" />
                    <!--标题文字-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="15dp"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/ziti"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_liucheng"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1.5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="未处理"
                                android:textColor="@color/xiaohei"
                                android:textSize="10dp" />

                            <View
                                android:layout_width="25dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:background="@color/shouye" />

                            <TextView
                                android:id="@+id/textView02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:text="处理中"
                                android:textColor="@color/xiaohei"
                                android:textSize="10dp" />

                            <View
                                android:layout_width="25dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:background="@color/shouye" />

                            <TextView
                                android:id="@+id/textView03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:text="已完成"
                                android:textColor="@color/xiaohei"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView01"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/result"
                                android:text="未处理"
                                android:textColor="@color/xiaohei"
                                android:textSize="10dp" />

                            <View
                                android:layout_width="25dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/shouye" />

                            <ImageView
                                android:id="@+id/imageView02"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/resulting"
                                android:text="处理中"
                                android:textColor="@color/income_green"
                                android:textSize="10dp" />

                            <View
                                android:layout_width="25dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/shouye" />

                            <ImageView
                                android:id="@+id/imageView03"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/result"
                                android:text="已完成"
                                android:textColor="@color/xiaohei"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View style="@style/line"/>
            <az.com.newazhong.utilsclass.myViews.RichTextView
                android:id="@+id/tvContent"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:textColor="@color/xiaohei"
                android:lineSpacingExtra="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="14dp">
            </az.com.newazhong.utilsclass.myViews.RichTextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/photo1"
                    android:layout_width="120dp"
                    android:padding="5dp"
                    android:layout_height="100dp" />
                <ImageView
                    android:id="@+id/photo2"
                    android:layout_width="120dp"
                    android:layout_height="100dp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
