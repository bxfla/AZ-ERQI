<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/color_bg_selected">
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/myphoto"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>
        <!--<az.com.newazhong.utilsclass.myViews.CircleImageView-->
            <!--android:id="@+id/iv_photo"-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="70dp"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@drawable/user_image"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginTop="20dp"/>-->
        <LinearLayout
            android:id="@+id/llUserInfor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/iv_photo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <Button
            android:visibility="gone"
            android:id="@+id/btnLogin"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_progress_radius"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="登录/注册" />

    </RelativeLayout>
    <View style="@style/line"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--问题上报查询-->
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:id="@+id/queryUpQuestion"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/query_upquestion"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/query_upquestion"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/xiaohei"
                android:layout_toRightOf="@id/iv1"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/go"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View style="@style/line"/>
        <!--活动预约查询-->
        <RelativeLayout
            android:visibility="gone"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:id="@+id/queryActivity"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/query_activity"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/query_activity"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/xiaohei"
                android:layout_toRightOf="@id/iv2"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/go"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View style="@style/line"/>
        <!--办事预约查询-->
        <RelativeLayout
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:id="@+id/queryWorkGuide"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/query_workguide"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/query_workguide"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/xiaohei"
                android:layout_toRightOf="@id/iv3"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/go"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"

                android:id="@+id/imageView2"/>
        </RelativeLayout>
        <View style="@style/line"/>
        <!--个人信息完善-->
        <RelativeLayout
            android:visibility="gone"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:id="@+id/upMyinfor"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/iv6"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/up_myinfor"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/up_myinfor"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/xiaohei"
                android:layout_toRightOf="@id/iv6"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/go"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View style="@style/line"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="17dp"
        android:background="@drawable/custom_progress_radius"
        android:layout_margin="40dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:gravity="center"/>
</LinearLayout>